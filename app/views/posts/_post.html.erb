<div class="row-fluid post <%= 'post-first' if count==0 %>" mood="<%= post.mood %>">
  <div class="span9">
    <div class="post-header row-fluid">
      <%= post.sender.nil? ? '' : post.sender.username %>
      [<%= post.sender_desc %>]
      @
      [<%= post.receiver_desc %>]
    </div>
    <div class="post-message row-fluid">
      <%= post.content %>
    </div>
	</div>
	<div class="span3">

		<div class="post-location">
			<%= image_tag 'http://png-1.findicons.com/files/icons/766/base_software/16/drawingpin2_blue.png', data: {title: post.location}, rel: 'tooltip' %>
		</div>
      <div class="post-time">
        <%= l post.created_at.localtime %>
      </div>
	</div>
</div>