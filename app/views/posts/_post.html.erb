<div class="post-splitter"></div>

<div class="post">
	<div class="row-fluid">
	  <div class="span11" mood="<%= post.mood %>">
	    <div class="post-header">
	      <%= post.sender.nil? ? '' : post.sender.username %>
	      [<%= post.sender_desc %>]
	      @
	      [<%= post.receiver_desc %>]
	    </div>
	    <div class="post-message">
	      <%= post.content %>
	    </div>
		</div>
		<div class="span1">
			<div class="post-location">
			</div>
	    <div class="post-time">
		    <%= readable_time_ago(post.created_at.localtime) %>
	    </div>
		</div>
	</div>
</div>
