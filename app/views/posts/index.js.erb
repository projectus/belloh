$('#next-page').html("<%=j link_to_next_page @posts, 'Load more posts', remote: true %>");
$('#alerts').html("<%=j render 'layouts/alerts' %>");

<% if params[:page].nil? %>
  if ($(window).scrollTop() > 160) {
	  $(window).scrollTop(160);
  }
  $('#post-list').html("<%=j render partial: 'list', locals: {posts: @posts} %>");

  <% if params[:filter].nil? %>
	  $('#post_content').val("");	
	<% end %>

  $('#geostatus').html("<%=j t(:posting_at) + @location %>");
  $('#post_latitude').val("<%=j session[:lat].to_s %>");
  $('#post_longitude').val("<%=j session[:lng].to_s %>");	
	setMap();
  
<% else %>
  $('#post-list').append("<%=j render partial: 'list', locals: {posts: @posts} %>");
<% end %>

