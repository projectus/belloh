<div id="posts">Loading nearby posts</div>

<div id="new_post_link">
  <%= link_to 'New post', "javascript:void(0)", onClick: "showForm();" %>
</div>
<div id="new_post_box">
<div>
	
<script>
  // Javascript to fetch user's location and fill with relevant posts
	$(function() {
	  getLocation(setPosition);
	});
		
	function setPosition(position) {			
    var lat=position.coords.latitude; 
		var lon=position.coords.longitude;
		var the_data = 'lat=' + encodeURIComponent(lat)
	               +'&lon=' + encodeURIComponent(lon);
		$.ajax({
		  data: the_data,
		  type: 'get',
		  url: '<%=j currloc_path %>'
		});
	}
	
	function showForm() {
		$('#new_post_box').show();
		$('#new_post_link').hide();
	}
</script>
