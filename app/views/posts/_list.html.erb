<div class="span2"></div>

<div class="well span8">

    <% @posts.each do |post| %>

      <% if post.mood == "caution" %>
              <div class="row alert alert-block">
      <% elsif post.mood == "negative" %>
              <div class="row alert alert-error">
      <% elsif post.mood == "positive" %>
              <div class="row alert alert-success">
      <% else %>
              <div class="row alert alert-info">
      <% end %>


          <div class="">

            <%= post.location %>
            <div class="span3">


              <%= post.sender.username unless post.sender.nil? %>
            </div>
            <div class="span3">[<%= post.sender_desc %>]</div>
            <div class="span1">@</div>
            <div class="span3">[<%= post.receiver_desc %>]</div>
            <div class="span1"><%= link_to 'Show', post %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          </div>
          <div class="">
            <%= post.content %>
          </div>

      </div>
    <% end %>

</div>

<div class="span2"></div>