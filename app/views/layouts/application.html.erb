<!DOCTYPE html>
<html>
<head>
  <title>Belloh</title>
  <%= stylesheet_link_tag    "application" %>

  <link href='http://fonts.googleapis.com/css?family=Lily+Script+One' rel='stylesheet' type='text/css'>

	<style>
	    #map-canvas {
        margin: 0;
        padding: 0;
        height: 400px !important;
	    }

	    #slider {
        width: 200px;
        float: right;
	    }
	</style>
	
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
  <meta charset="utf-8">

	<!-- Load the javascript at the bottom of the page. This is more efficient -->
	<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places"></script>
	<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>

	<script>
	    var map;
	    function initialize() {
	      var mapOptions = {
	          zoom: 8,
	          center: new google.maps.LatLng(-34.397, 150.644),
	          mapTypeId: google.maps.MapTypeId.ROADMAP
	      };
	      map = new google.maps.Map(document.getElementById('map-canvas'),
	              mapOptions);
	    }

	    google.maps.event.addDomListener(window, 'load', initialize);

	    $(document).bind("ready", function(){
	      $('#mapfull').on('shown', function () {
	        google.maps.event.trigger(map, 'resize');
	      });
	    });
	</script>
	
	<%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div id="nav-center">
	    <ul class="nav nav-left">
		    <li><a class="brand" href="<%= root_path %>">Belloh <%= hub_name %></a></li>
      </ul>
      <ul class="nav pull-right">
	      <li><a href="#bellohModal" role="button" data-toggle="modal">
          <img id="logo-img" width="30px" src="http://clipartist.info/Holidays/Xmas/Animal/hippo_line_art_thestructorr_hippo_black_white_line_art_christmas_xmas_stuffed_animal-1331px.png" />
          </a></li>
	    </ul>
    </div>
  </div>
</div>


<!-- Modal -->
<div id="bellohModal" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-header">
	  Belloh at the world
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  </div>
  <div class="modal-body"></div>
</div>

<div id="mapfull" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-header">
    Map Full Screen
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  </div>
  <div class="modal-body">
    <div id="map-canvas"></div>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
<% end %>

<div class="container">
  <%= yield %>
</div>

</body>

</html>
