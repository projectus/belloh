<% if @vhub.nil? %>
  <div class="well">
	  <h1>the [ <%= @virtual_hub.name %> ] virtual hub does not exist yet.<h1>
		<h2>want to create it?</h2>
	</div>
	<%= render 'form' %>
<% else %>

  <% if @background.exists? %>
  <style>
    body {
	    background: url("<%= @background.url %>") no-repeat center center fixed;
	    -webkit-background-size: cover;
	    -moz-background-size: cover;
	    -o-background-size: cover;
	    background-size: cover;
    }
  </style>
  <% end %>

	<%= render partial: 'layouts/header', locals: {name: @vhub.name} %>
	
	<div class="row">
		<div class="span8">
			<%= render partial: 'layouts/posts', locals: {posts: @posts, post: @hub_post, controller: 'hub_posts'}%>
		</div>

		<div class="span4">
	    <div class="well">
		    <% if @avatar.exists? %>
	        <%= image_tag @avatar.url(:default) %>
	      <% else %>
	        <%= image_tag 'tiles/hippo.png' %>
	      <% end %>
	    </div>

	    <div class="well">
	      <%= @vhub.description %>
	    </div>
	
			<%= link_to 'Edit Virtual Hub', edit_vhub_path, class: 'btn btn-info' %>
		</div>
	</div>
	<% end %>
