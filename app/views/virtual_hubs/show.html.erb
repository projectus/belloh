<% if @vhub.nil? %>
  <div class="well">
	  <h1>the [ <%= @virtual_hub.name %> ] virtual hub does not exist yet.<h1> 
		<h2>want to create it?</h2>
	</div>
	<%= render 'form' %>
<% else %>
<div id="header">
	<div id="new_post_box" mood="neutral">
    <%= render 'hub_posts/form' %>
  </div>
</div>
	<%= render partial: 'hub_posts/list', locals: {posts: @vhub.posts} %>
<% end %>