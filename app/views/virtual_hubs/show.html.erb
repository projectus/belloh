<% if @vhub.nil? %>
  <div class="well">
	  <h1>the [ <%= @virtual_hub.name %> ] virtual hub does not exist yet.<h1> 
		<h2>want to create it?</h2>
	</div>
	<%= render 'form' %>
<% else %>
  <div id="header">
	  <div id="new_post_box" mood="<%= @hub_post.mood %>">
	    <%= render partial: 'posts/form', locals: {post: @hub_post} %>
    </div>
  </div>
  <% @vhub.posts.each_with_index do |post,count| %>
    <%= render partial: 'hub_posts/post', locals:{post: post, count: count} %>
  <% end %>
<% end %>